<Window x:Class="ProductAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductAccounting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Информация">
                <Grid>
                <Grid Name="MainContent">
                    
                    <Button x:Name="buttonWarehouses" Width="200" Height="50" Content="Информация о скаладах" Background="LightGray" Click="Button_Click_Warehouses" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="28,60,0,0" 
                        FontSize ="16" FontWeight ="Bold"/>
                    <Button x:Name="buttonItems" Width="200" Height="50" Content="Информация о товарах" Background="LightGray" Click="Button_Click_Items" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="28,153,0,0" 
                        FontSize ="16" FontWeight ="Bold"/>
                    <Button x:Name="button" Width="200" Height="50" Content="Информация о поставщиках" Background="LightGray" Click="Button_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="28,256,0,0" 
                        FontSize ="16" FontWeight ="Bold"/>
                </Grid>
                <Grid Name="PageLayer" Visibility="Hidden">
                    <Frame Name="FrameInformation" NavigationUIVisibility="Hidden"/>
                </Grid>
              </Grid>
            </TabItem>
            
        </TabControl>

    </Grid>
</Window>
