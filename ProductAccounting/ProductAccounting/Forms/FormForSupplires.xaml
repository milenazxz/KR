<Window x:Class="ProductAccounting.Forms.FormForSupplires"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductAccounting.Forms"
        mc:Ignorable="d"
        Title="FormForSupplires" Height="450" Width="760">
    <!-- Подключение файла стилей формы -->
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </Window.Resources>

    <Grid Background="#E8F1FA" Height="450" Width="760">

        <StackPanel Orientation="Vertical" Margin="50,90,380,76">
            <Label Content="Наименование организации"/>
            <Label Content="Форма правовой организации"/>
            <Label Content="Город"/>
            <Label Content="Адрес"/>
            <Label Content="Рейтинг"/>
            <Label Content="Номер телефона"/>
            <Label Content="Адрес электронной почты"/>
        </StackPanel>

        <StackPanel Orientation="Vertical"  Margin="254,97,42,61" >
            <Border>
                <TextBox x:Name="NameSupplire"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <ComboBox  x:Name="OrganformSupplire">
                    <TextBlock>Индивидуальный предприниматель</TextBlock>
                    <TextBlock>Юридическое лицо</TextBlock>
                </ComboBox>
            </Border>
            <Separator Height="10"  Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="CitySupplire"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="AddressSupplire"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="RatingSupplire"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="PhoneNumberSupplire"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="EmailSupplire"/>
            </Border>
        </StackPanel>

        <Button x:Name="OkButWarehouse" Content="Подтвердить" FontSize="16" Width="130" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,377,0,0" Click="AddSuppliers" />
    </Grid>
</Window>
