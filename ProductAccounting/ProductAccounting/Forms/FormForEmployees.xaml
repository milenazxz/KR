<Window x:Class="ProductAccounting.Forms.FormForEmployees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductAccounting.Forms"
        mc:Ignorable="d"
        Title="FormForEmployees" Height="450" Width="800">
    <!-- Подключение файла стилей формы -->
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </Window.Resources>

    <Grid Background="#E8F1FA" Height="450" Width="823" Margin="0,0,0,-16">

        <StackPanel Orientation="Vertical" Margin="63,114,428,116">
            <Label Content="ФИО"/>
            <Label Content="Должность"/>
            <Label Content="Контакты"/>
        </StackPanel>

        <StackPanel Orientation="Vertical"  Margin="254,120,42,104" >
            <Border>
                <TextBox x:Name="NameEmployee"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <ComboBox x:Name="PostEmployee">
                    <TextBlock> Работник склада </TextBlock>
                    <TextBlock> Директор</TextBlock>
                    <TextBlock> Экономист-аналитик</TextBlock>
                </ComboBox>

            </Border>
            <Separator Height="10"  Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="ContacntEmployee"/>
            </Border>
        </StackPanel>

        <Button x:Name="OkButWarehouse" Content="Добавить" FontSize="16" Width="130" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="285,303,285,0" Click="AddEmployee"/>
    </Grid>
</Window>
