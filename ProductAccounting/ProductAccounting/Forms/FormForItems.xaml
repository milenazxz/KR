<Window x:Class="ProductAccounting.Forms.FormForItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductAccounting.Forms"
        mc:Ignorable="d"
        Title="FormForItems" Height="450" Width="760">
    <!-- Подключение файла стилей формы -->
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </Window.Resources>

    <Grid Background="#E8F1FA" Height="450" Width="760">

        <StackPanel Orientation="Vertical" Margin="50,90,480,76">
            <Label Content="Название товара"/>
            <Label Content="Вид товара"/>
            <Label Content="Цвет товара"/>
            <Label Content="Цена товара"/>
            <Label Content="Величина товара"/>
            <Label Content="Единица измерения"/>
        </StackPanel>

        <StackPanel Orientation="Vertical"  Margin="254,97,42,61" >
            <Border>
                <TextBox x:Name="NameItem"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="TypeItem"/>
            </Border>
            <Separator Height="10"  Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="ColorItem"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="PriceItem"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="MagnitudeItem"/>
            </Border>
            <Separator Height="10" Background="#E8F1FA"/>
            <Border>
                <TextBox x:Name="UnitItem"/>
            </Border>
        </StackPanel>

        <Button x:Name="OkButWarehouse" Content="Добавить" FontSize="16" Width="130" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,377,0,0" />
    </Grid>
</Window>
