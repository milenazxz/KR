<Window x:Class="ProductAccounting.Forms.FormForSales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductAccounting.Forms"
        mc:Ignorable="d"
        Title="FormForSales" Height="450" Width="800">
    <Window.Resources>
        <!-- Список доступных значений для ComboBox -->
        <x:Array x:Key="AvailableUnits" Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>шт.</sys:String>
            <sys:String>кг</sys:String>
            <sys:String>л</sys:String>
        </x:Array>

        <x:Array x:Key="AvailableNDS" Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>20</sys:String>
            <sys:String>10</sys:String>
            <sys:String>7</sys:String>
            <sys:String>5</sys:String>
            <sys:String>0</sys:String>
        </x:Array>
        
        
    </Window.Resources>
    
    <Grid Background="#E8F1FA">

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <!-- Первая строка для кнопки -->
            <RowDefinition Height="*"/>
            <!-- Вторая строка для DataGrid -->
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Button Content="+" FontSize="20" Margin="17,97,753,4" Click="AddRow"/>
            <Button Content="-" FontSize="20" Margin="52,97,718,4"/>
            <StackPanel Orientation="Vertical" Margin="35,21,594,13">
                <Label Content="Ответственный" FontWeight="Bold"  FontSize="20" />
                <Label Content="Склад" FontWeight="Bold"  FontSize="20" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="197,31,400,16">
                <Border>
                    <ComboBox x:Name="HeadwarhouseComboBox" Margin="0,0,0,20" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding IdEmpNavigation}"/>
                </Border>
                <Border>
                    <ComboBox x:Name="WarhouseComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding IdWarehNavigation}"/>
                </Border>
            </StackPanel>

        <StackPanel Orientation="Vertical" Margin="405,21,234,31">
            <Label Content="Клиент" FontWeight="Bold"  FontSize="20" />
            <Label Content="Дата" FontWeight="Bold"  FontSize="20" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="486,32,26,24">
                <Border Margin="0,0,0,14">
                <ComboBox x:Name="ClientComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding IdClientNavigation}"/>
            </Border>
            <Border>
                    <DatePicker Name="datePicker1" IsDropDownOpen="False" SelectedDateFormat="Short" />
                </Border>
               
            </StackPanel>
        </Grid>

        <DataGrid x:Name="salesItemsGrid" Background="#E8F1FA" AutoGenerateColumns="False" CanUserAddRows="True" HeadersVisibility="Column" ItemsSource="{Binding ImputItems}" Grid.Row="1">
            <DataGrid.Columns>


                <DataGridTemplateColumn Header="Наименование" Width ="200"> 
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ItemName}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox x:Name="ProductNameComboBox" ItemsSource="{Binding DataContext.AvailableItems, RelativeSource={RelativeSource AncestorType=Window}}" 
                                      DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding IdItemNavigation, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Количество" Binding="{Binding quentity, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Единица измерения" Binding="{Binding unit, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Единица Стоимость" Binding="{Binding price, UpdateSourceTrigger=PropertyChanged}" Width="*"/>

                <DataGridTemplateColumn Header="НДС">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding NDS}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{StaticResource AvailableNDS}" 
                  SelectedItem="{Binding NDS, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Сумма" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
