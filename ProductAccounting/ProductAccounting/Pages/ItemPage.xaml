<Page x:Class="ProductAccounting.Pages.ItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductAccounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Button x:Name="CloseItem" Content="Закрыть" Width="100" HorizontalAlignment="Right" Grid.Row="0" Click="CloseItemPage"/>
        </Grid>
            <DataGrid x:Name="ItemGrid" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название товара" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название товара" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название товара" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название товара" Width="300" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
