<Page x:Class="ProductAccounting.Pages.WarehousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductAccounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WarehousesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Первая строка для кнопки -->
            <RowDefinition Height="*"/>
            <!-- Вторая строка для DataGrid -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button x:Name="Close" Content="Закрыть" Width="100" Height="30" Margin="690,5,0,5"  HorizontalAlignment="Left"  Click="CloseWarehousesPage"/>
            <Button x:Name="Deletewarehouses" Content="Удалить" Width="100" Height="30" Margin="585,5,0,5" HorizontalAlignment="Left"  Click="DeleteWarehouse"/>
            <Button x:Name="Addwarehouses" Content="Добавить" Width="100" Height="30" Margin="480,5,0,5" HorizontalAlignment="Left"  Click="AddWarehouse"/>
        </Grid>

        <DataGrid x:Name="warehousesGrid"  AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название склада" Binding="{Binding name}" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Город" Binding="{Binding city}" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding address}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
